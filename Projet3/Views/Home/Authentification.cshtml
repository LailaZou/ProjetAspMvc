@{
    ViewBag.Title = "Acceuil";
}

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="authentification_body">

    <h1 class="big_title">
        Espace réservé aux étudiants
    </h1>
    <form class="form_authentif" action="~/Home/Connect" method="post">
        <fieldset>
            <legend>Authentification</legend>

            <div class="form-group" style="width:100%;">
                <label for="cne">CNE</label>
                <input type="text" class="form-control" id="cne" name="cne" placeholder="Entrer votre cne">
            </div>
            <div class="form-group">
                <label for="cne">CIN</label>
                <input type="text" class="form-control" id="cin" name="cin" placeholder="Entrer votre cin">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" name="mdp" id="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <hr />
            <p>Vous n'etes pas encor inscrit?</p> @Html.ActionLink("Inscrivez-vous", "Subscribe", "Home")
        </fieldset>
    </form>

    <p class="warning">@ViewData["error"]</p>
</body>
</html>
